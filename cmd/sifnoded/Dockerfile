#
# Build
#
FROM golang:1.15 AS build

ARG chainnet

ENV GOBIN=/go/bin
ENV GOPATH=/go
ENV CGO_ENABLED=0
ENV GOOS=linux
ENV CHAINNET=$chainnet

# cosmovisor
WORKDIR /cosmos-sdk
RUN git clone https://github.com/cosmos/cosmos-sdk .
RUN make -C ./cosmovisor cosmovisor
RUN mv ./cosmovisor/cosmovisor /go/bin/

# sifnoded
WORKDIR /sifchain
COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CHAINNET=$CHAINNET make install

#
# Main
#
FROM alpine

ENV PACKAGES curl jq bind-tools expect

EXPOSE 1317
EXPOSE 26656
EXPOSE 26657

RUN apk add --update --no-cache $PACKAGES

# Copy the compiled binaires over.
COPY --from=build /go/bin/cosmovisor /usr/bin/cosmovisor
COPY --from=build /go/bin/sifnoded /usr/bin/sifnoded
COPY --from=build /go/bin/sifgen /usr/bin/sifgen
